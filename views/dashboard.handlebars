<div class="row row-cols-1 row-cols-md-2 g-4 m-3"></div>
{{#if posts}}
{{#each posts as |post|}}
  <div class="col">
    <div class="card m-3">
      <div class="card-body p-4">
        <h5 class="card-title border-bottom">{{post.title}}</h5>
        <p class="card-text">{{post.content}}</p>
        <p class="card-text"><small class="text-body-secondary"> Posted by: {{user.username}} on {{ formatDate post.createdAt}} </small></p>
      </div>
    </div>
  </div>
{{/each}}
{{else}}
<div class="d-flex justify-content-center">
    <h2>No posts yet</h2>
</div>

{{/if}}
</div>
<div class="d-flex justify-content-center">
    <button class="btn custom-button m-2">New Post +</button>
</div>

<div id="new-post" class="m-4 p-4 custom-background border border-primary-subtle rounded">
    <h3 class="d-flex justify-content-center">New Post</h3>
    <div class="mb-3">
    <label for="post-title" class="form-label">Title</label>
    <input type="text" class="form-control" id="post-title" placeholder="Post Title">
    </div>
    <div class="mb-3">
    <label for="post-content" class="form-label">Post</label>
    <textarea class="form-control" id="post-content" rows="3"></textarea>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn custom-button m-2" data-id="{{userId}}">Submit</button>
        <button class="btn custom-button m-2 ">Cancel</button>
    </div>
</div>
