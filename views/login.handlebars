{{!-- log in form  --}}
<div class="container log-in-form">
  <div class="m-4 border border-primary-subtle p-4 shadow rounded bg-light">
    <form class="p-4 rounded border border-primary-subtle">
      <h3>Sign in to view more!</h3>
      <div class="form-group">
        <label for="username">Username</label>
        <input type="text" class="form-control border-primary-subtle" id="username" aria-describedby="username" placeholder="Enter username">
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control border-primary-subtle" id="password" placeholder="Password">
      </div>
      <button type="submit" class="btn custom-button m-4 log-in">Submit</button>
    </form>
    <div class="p-2">
      <p class="m-2" id="message-area"></p>
    </div>
    <div class="d-flex">
      <p class="m-2">Not a member?</p>
    </div>
    <div class="d-flex">
      <button class="btn custom-button m-2 toggle-sign-up">Sign up instead</button>
    </div>
  </div>
</div>

{{!-- sign-up form  --}}
<div class="container sign-up-form d-none">
  <div class="m-4 border border-primary-subtle p-4 shadow rounded bg-light">
    <form class="p-4 rounded border border-primary-subtle">
      <h3>Sign up to view more!</h3>
      <h4>Create a free account.</h4>
      <div class="form-group">
        <label for="new-username">Username</label>
        <input type="text" class="form-control border-primary-subtle" id="new-username" aria-describedby="new-username" placeholder="Enter username">
      </div>
      <div class="form-group">
        <label for="new-password">Password</label>
        <input type="password" class="form-control border-primary-subtle" id="new-password" placeholder="Password">
      </div>
      <button type="submit" class="btn custom-button m-4 sign-up">Submit</button>
    </form>
    <div class="p-2">
      <p class="m-2" id="message-area-2"></p>
    </div>
    <div class="d-flex">
      <p class="m-2">Already a member?</p>
    </div>
    <div class="d-flex">
      <button class="btn custom-button m-2 toggle-log-in">Log in instead</button>
    </div>
  </div>
</div>




<script src="/js/login.js"></script>

